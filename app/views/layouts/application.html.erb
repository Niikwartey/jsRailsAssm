<!DOCTYPE html>
<html>
  <head>
    <title>RailsAssm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background: <%= @board.color if @board %>">
    <%= render 'layouts/nav' %>

    <main>
      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
      <% end -%>

      <%= yield %>
    </main>

    <style>
      body {
        height: 100vh;
        /*overflow: hidden;*/
        overflow-x: auto;
      }
    </style>
  </body>
</html>
