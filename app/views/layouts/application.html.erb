<!DOCTYPE html>
<html>
  <head>
    <title>RailsAssm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background: <%= @board.color if @board %>">
    <nav>
      <%= link_to("Sign up", new_user_registration_path) %>
      <%= link_to("Sign in", new_user_registration_path) %>
      <%= link_to('Sign out', destroy_user_session_path, method: :get) %>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
    </nav>

    
welcome
<h2><%= "Hello, #{current_user.email}" if current_user %></h2>

    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>

    <main>
      <%= yield %>
    </main>

    <style>
      body {
        height: 100vh;
        /*overflow: hidden;*/
        overflow-x: auto;
      }
    </style>
  </body>
</html>
