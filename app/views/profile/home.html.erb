<%= form_for [current_user, @new_board] do |f| %>
  <%= f.text_field :name, required: 'required' %>
  <%= f.color_field :color, value: "#5ebb9f" %>
  <%= f.submit 'Add board', class: "ui button mini" %>
<% end %>


<div class="ui four column doubling stackable grid container">
  <% @boards.each do |board| %>
    <div class="column">
      <a href="/users/<%= @user.id %>/boards/<%= board.id %>">
        <div class="board-tile" style="background: <%= board.color %>">
          <p><%= board.name %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>

<style type="text/css">
  .board-tile {
    display: inline-block;
    border-radius: 2px;
    width: 230px;
    height: 70px;
    padding: 10px;
  }
  .board-tile p {
    color: white;
    text-decoration: none;
    font-size: 15px;
    text-align: center;
  }
</style>
